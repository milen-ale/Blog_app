<div class = "Post-containers">
<section  class = "main-container">
  <ul>
    <%= render @user %>
  </ul>
</section>

 <div class = "bio user-bio">
 <h3>Bio</h3>
 <p><%= @user.bio%></p>
  </div>
  <div class = "posts">
    <ul>
    <% @user.return_recent_posts.each_with_index do |post, i| %>
      <%= link_to user_post_path(@user.id, post.id) do %>
        <div class="user-recent-post">
          <h2 class="post-title"><strong>Post</strong> : <%= post.title %> <%= i + 1 %></h2>
          <p class="post-text"><%= post.text %></p>
          <div class="comment-info">
          <span class = "comment-text"><small>Comments: <%= post.comments_counter %></small>,</span>
          <span class = "comment-text"><small>Likes: <%= post.likes_counter %></small></span>
          </div>
            </div>
            <% end %>
            <% end %>
    </ul>
    <div class="btn">
    <button class="see-all-posts">
    <%=link_to "#{@user.id}/posts" do %>
      See All Posts
    <% end %>
    </button>
  </div>
  </div>
</div>