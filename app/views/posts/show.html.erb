<h1>Posts#show</h1>
<section class="posts-show">
  <div class="post-header">
    <h2>Post #<span><%= @post.id %></span> by <span><%= @user.name %></span></h2>
    <div>
      <span>Comments: <%= @post.comments_counter %></span>
      <span>Likes: <%= @post.likes_counter %></span>
    </div>
    <p><%= @post.text %></p>
  </div>
  <%= render "likes/like" %>
  <ul class="comments-container">
    <% @post.return_recent_comments.each do |comment| %>
      <li><span><%= comment.author.name %>:  </span><%= comment.text %></li>
    <% end %>
  </ul>
  <%= link_to "/users/#{@user.id}/posts/#{@post.id}/comments/new" do %>
  <button>Add comment</button>
<% end %>
</section>